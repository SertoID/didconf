{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "module": "commonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "declarationMap": true,
    "declaration": true,
    "composite": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}